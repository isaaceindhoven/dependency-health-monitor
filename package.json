{
  "name": "dependency-health-monitor",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "npm run dev -ws",
    "test:unit": "npm run test:unit -ws",
    "test:e2e": "npm run test:e2e:ci --workspace=packages/frontend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "test:lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@rushstack/eslint-patch": "^1.1.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^7.0.4",
    "prettier": "^2.6.2"
  }
}
